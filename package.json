{
	"name": "vite-react-typescript-starter",
	"private": true,
	"version": "0.0.0",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"start": "cross-env NODE_ENV=production electron .",
		"electron-dev": "concurrently \"npm run dev\" \"npm run backend\" \"wait-on http://localhost:5173 http://localhost:5000 && cross-env NODE_ENV=production electron .\"",
		"electron-build": "npm run build && electron-builder",
		"dist": "npm run build && electron-builder --publish=never",
		"backend": "cd api && python server.py",
		"backend-install": "cd api && pip install -r requirements.txt"
	},
	"dependencies": {
		"@cloudinary/url-gen": "^1.21.0",
		"@xenova/transformers": "^2.16.0",
		"axios": "^1.11.0",
		"lucide-react": "^0.344.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"form-data": "^4.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.9.1",
		"@types/react": "^18.3.5",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.18",
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0",
		"electron": "^37.2.5",
		"electron-builder": "^26.0.12",
		"eslint": "^9.9.1",
		"eslint-plugin-react-hooks": "^5.1.0-rc.0",
		"eslint-plugin-react-refresh": "^0.4.11",
		"globals": "^15.9.0",
		"postcss": "^8.4.35",
		"tailwindcss": "^3.4.1",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.3.0",
		"vite": "^5.4.2",
		"vite-plugin-static-copy": "^3.1.1",
		"wait-on": "^8.0.4"
	},
	"build": {
		"appId": "com.example.yourapp",
		"productName": "Bible-Echo",
		"directories": {
			"output": "dist-electron"
		},
		"files": [
			"dist/**/*",
			"main.js",
			"package.json"
		],
		"mac": {
			"category": "public.app-category.utilities"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
